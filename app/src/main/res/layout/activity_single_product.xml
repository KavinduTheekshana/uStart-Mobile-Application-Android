<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleProductActivity"
    android:background="@color/lightgray"
    android:orientation="vertical"
    android:baselineAligned="false">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <!--        <com.jgabrielfreitas.core.BlurImageView-->
        <!--            android:id="@+id/BlurImageView"-->
        <!--            android:layout_width="fill_parent"-->
        <!--            android:layout_height="fill_parent"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            android:layout_alignParentTop="true"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:src="@drawable/profile" />-->


        <ImageView
            android:id="@+id/single_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jackdaniels"
            android:scaleType="centerCrop"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/single_product_back_button"
                        android:clickable="true"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:elevation="2dp"
                        app:cardElevation="2dp"
                        app:cardMaxElevation="2dp"
                        app:strokeColor="@color/white"
                        app:cardCornerRadius="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_left_arrow"
                            android:tint="@color/logo_blue"
                            android:padding="10dp"></ImageView>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing">





                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:gravity="right">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/single_product_cart"
                        android:clickable="true"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:elevation="2dp"
                        app:cardElevation="2dp"
                        app:cardMaxElevation="2dp"
                        app:strokeColor="@color/white"
                        app:cardCornerRadius="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_shopping_cart"
                            android:scaleType="fitEnd"
                            android:tint="@color/logo_blue"
                            android:padding="10dp"></ImageView>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
            </LinearLayout></LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textAlignment="center"

        android:orientation="vertical">




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="0dp"
                    app:cardElevation="1dp"
                    android:padding="15dp"
                    app:cardUseCompatPadding="true">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Product Name"
                                android:textColor="@color/software"
                                android:textSize="13dp"></TextView>

                            <TextView
                                android:id="@+id/single_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:text="Product Name"
                                android:textSize="17dp"
                                ></TextView>

                        </LinearLayout>

                    </LinearLayout>









                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="0dp"
                    app:cardElevation="1dp"
                    android:padding="15dp"
                    app:cardUseCompatPadding="true">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Description"
                                android:textColor="@color/software"
                                android:textSize="13dp"></TextView>

                            <TextView
                                android:id="@+id/single_product_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:text="Description"
                                android:textSize="17dp"
                                ></TextView>

                        </LinearLayout>

                    </LinearLayout>









                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="0dp"
                    app:cardElevation="1dp"
                    android:padding="15dp"
                    app:cardUseCompatPadding="true">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Category"
                                android:textColor="@color/software"
                                android:textSize="13dp"></TextView>

                            <TextView
                                android:id="@+id/single_product_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:text="Category"
                                android:textSize="17dp"
                                ></TextView>

                        </LinearLayout>

                    </LinearLayout>









                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="0dp"
                    app:cardElevation="1dp"
                    android:padding="15dp"
                    app:cardUseCompatPadding="true">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Unit Price"
                                android:textColor="@color/software"
                                android:textSize="13dp"></TextView>

                            <TextView
                                android:id="@+id/single_product_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:text="Unit Price"
                                android:textSize="17dp"
                                ></TextView>

                        </LinearLayout>

                    </LinearLayout>









                </com.google.android.material.card.MaterialCardView>












            </LinearLayout>






        </androidx.core.widget.NestedScrollView>




















    </LinearLayout>












    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/single_product_qty_down"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/logo_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                        android:tint="@color/white">
                    </ImageView>

                </com.google.android.material.card.MaterialCardView>





                <TextView
                    android:id="@+id/single_product_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textAlignment="center"></TextView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/single_product_qty_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/logo_blue"
                    android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_keyboard_arrow_right"
                    android:tint="@color/white">

                </ImageView>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_weight="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/single_product_add_to_cart_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:enabled="true"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:backgroundTint="@color/logo_blue"
                android:text="Add TO Cart"/>

        </LinearLayout>







    </LinearLayout>

</LinearLayout>